@using MvcTicariOtomasyon.Models.Concrete
@model List<SalesReport>
@{
    ViewBag.Title = "SaleDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2> Satış Detayı </h2>
<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SalesReportID</td>
            <td>@item.Product.ProductName</td>
            <td>@item.Current.CurrentFirstName @item.Current.CurrentLastName</td>
            <td>@item.Employee.EmployeeFirstName @item.Employee.EmployeeLastName</td>
            <td>@item.Piece</td>
            <td>@item.Price</td>
            <td>@item.Total</td>
            <td>@item.SalesDate</td>
        </tr>
    }
</table>
<td><a href="#" class="btn btn-primary" style="background-color:dodgerblue">Yazdır</a></td>


