@using MvcTicariOtomasyon.Models.Concrete
@model List<SalesReport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table id="tbl1" class="table table-bordered table-hover" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Günceller</th>
            <th>Detaylar</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SalesReportID</td>
                <td>@item.Product.ProductName</td>
                <td>@item.Current.CurrentFirstName @item.Current.CurrentLastName</td>
                <td>@item.Employee.EmployeeFirstName @item.Employee.EmployeeLastName</td>
                <td>@item.Piece</td>
                <td>@item.Price</td>
                <td>@item.Total</td>
                <td>@item.SalesDate</td>
                <td><a href="/Sale/GetSale/@item.SalesReportID" class="btn btn-warning" style="color: black">Güncelle</a></td>
                <td>
                    <a href="/Sale/SaleDetails/@item.SalesReportID" class="btn btn-primary" style="background-color:navajowhite; color:black">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a class="btn btn-outline-info" href="/Sale/AddSale" style="color:black">Yeni Satış Yap</a>





<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>

