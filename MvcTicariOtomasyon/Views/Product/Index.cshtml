@using MvcTicariOtomasyon.Models.Concrete
@model List<Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered table-hover table-dark">
    <tr>
        <th>ID</th>
        <th>Urun</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.ProductName</td>
            <td>@product.Marka</td>
            <td>@product.Stok</td>
            <td>@product.PurchasePrice</td>
            <td>@product.SalePrice</td>
            <td>@product.Category.CategoryName</td>
            <td>@product.ProductImage</td>
            <td><a class="btn btn-danger" href="/Product/DeleteProduct/@product.ProductID" style="color:black">Sil</a></td>
            <td><a class="btn btn-warning" href="/Product/GetProduct/@product.ProductID" style="color:black">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Product/AddProduct" class="btn btn-outline-info" type="submit" style="color:black">Ürün Ekle</a>
