@model MvcTicariOtomasyon.Models.Concrete.Current

@{
    ViewBag.Title = "GetCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateCurrent", "Current", FormMethod.Post))
{
    <div class="=form-group">
        @Html.HiddenFor(x => x.CurrentID);
        @Html.Label("Ad");
        @Html.TextBoxFor(x => x.CurrentFirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CurrentFirstName, "", new { @style = "color:red" })
        <br />
        @Html.Label("Soyad");
        @Html.TextBoxFor(x => x.CurrentLastName, new { @class = "form-control" })
        <br />
        @Html.Label("Şehir");
        @Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })
        <br />
        @Html.Label("Mail");
        @Html.TextBoxFor(x => x.CurrentMail, new { @class = "form-control" })
    </div>
    <br />
    <button class="btn btn-success" style="color:black" type="submit">Güncelle</button>
}
