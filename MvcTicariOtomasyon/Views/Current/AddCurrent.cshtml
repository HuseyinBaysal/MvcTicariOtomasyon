@model MvcTicariOtomasyon.Models.Concrete.Current

@{
    ViewBag.Title = "AddCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Cari</h2>
<br />

<form action="/Current/AddCurrent" method="post" class="form-group">
    @Html.Label("Adı")
    @Html.TextBoxFor(x => x.CurrentFirstName, new { @class = "form-control" })

    @Html.Label("Soyadı")
    @Html.TextBoxFor(x => x.CurrentLastName, new { @class = "form-control" })

    @Html.Label("Şehir")
    @Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })

    @Html.Label("Mail")
    @Html.TextBoxFor(x => x.CurrentMail, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" type="submit">Kaydet</button>

</form>
