@using MvcTicariOtomasyon.Models.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-hover table-dark">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger" style="color:black">Sil</a></td>
            <td><a href="/Category/GetCategory/@item.CategoryID" class="btn btn-warning" style="color:black">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Category/AddCategory" class="btn btn-outline-info" style="color:black">Kategori Ekle</a>
